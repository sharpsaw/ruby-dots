#!/bin/bash -xe
## "gem", but backgrounds docs generation for much speed.
if [[ $1 = install ]]; then
    shift
    gem install --no-rdoc --no-ri "$@"
    tmpfile=/tmp/gem-rdoc-$$
    (gem rdoc --all &> $tmpfile && rm $tmpfile) &
    disown
elif [[ $1 = . ]]; then
    if [ -e .gemspec ]; then
        gem build .gemspec
    else
        gem build *.gemspec
    fi
    ,gemi *.gem
else
    gem "$@"
fi

